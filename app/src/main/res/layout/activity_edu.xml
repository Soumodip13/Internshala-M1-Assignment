<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

         xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"

        android:layout_width="match_parent"
        android:orientation="vertical"
         android:padding="24dp"


>


    <TextView
            android:text="Masters in Electrical Engineering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/masters"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_gravity="center"
            android:textStyle="bold"

    />
    <TextView
            android:text="Massachusetts Institute of Technology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/masterDescription"
            android:textSize="12sp"
            android:textColor="#555555"
            android:layout_gravity="center"
            android:textStyle="bold"
    />
    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/dividerHorizontal"
            android:layout_gravity="center"
            android:visibility="visible"
            android:color="#cccccc"
            android:layout_marginTop="8dp"
    />
    <TextView
            android:text="Masters in Physics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/masters2"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="8dp"

    />
    <TextView
            android:text="Massachusetts Institute of Technology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/master2Description"
            android:textSize="12sp"
            android:textColor="#555555"
            android:layout_gravity="center"
            android:textStyle="bold"
    />
    <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/dividerHorizontal"
            android:layout_gravity="center"
            android:visibility="visible"
            android:color="#CCCCCC"
            android:layout_marginTop="8dp"
    />
    <TextView
            android:text="Bachelors in Electrical Engineering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/masters3"
            android:textSize="16sp"
            android:textColor="#222222"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="8dp"

    />
    <TextView
            android:text="Massachusetts Institute of Technology"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/master3Description"
            android:textSize="12sp"
            android:textColor="#555555"
            android:layout_gravity="center"
            android:textStyle="bold"
    />
    <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/dividerHorizontal"
            android:layout_gravity="center"
            android:visibility="visible"
            android:color="#CCCCCC"
            android:layout_marginTop="8dp"
    />
</LinearLayout>